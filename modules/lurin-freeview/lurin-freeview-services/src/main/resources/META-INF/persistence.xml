<?xml version="1.0" encoding="UTF-8"?>
<persistence
        version="2.0"
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
>
    <persistence-unit name="lurin-freeview-em" transaction-type="RESOURCE_LOCAL">
        <class>com.zed.lurin.domain.jpa.FreeView</class>
        <class>com.zed.lurin.domain.jpa.CategorySchStatus</class>
        <class>com.zed.lurin.domain.jpa.CommercialZone</class>
        <class>com.zed.lurin.domain.jpa.TypeMessage</class>
        <class>com.zed.lurin.domain.jpa.CampaignMembersTemporal</class>
        <class>com.zed.lurin.domain.jpa.CategoryTechnologies</class>
        <class>com.zed.lurin.domain.jpa.CampaignMembers</class>
        <class>com.zed.lurin.domain.jpa.CategoryStatus</class>
        <class>com.zed.lurin.domain.jpa.ChannelPackages</class>
        <class>com.zed.lurin.domain.jpa.Messages</class>
        <class>com.zed.lurin.domain.jpa.Campaigns</class>
        <class>com.zed.lurin.domain.jpa.TypeLoad</class>
        <class>com.zed.lurin.domain.jpa.FreeWiewsReport</class>
        <class>com.zed.lurin.domain.jpa.CampaignReport</class>
        <properties>
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.use_sql_comments" value="false" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
            <property name="hibernate.id.new_generator_mappings" value="false" />
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.integration.envers.enabled" value="false" />
            <property name="hibernate.envers.autoRegisterListeners" value="false" />
            <property name="hibernate.enable_lazy_load_no_trans" value="true" />
            <property name="hibernate.connection.autocommit" value="false" />
            <property name="hibernate.cache.use_query_cache" value="false" />
        </properties>
    </persistence-unit>


</persistence>